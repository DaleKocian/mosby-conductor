<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/task_item_padding_top_bottom"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/task_item_padding_top_bottom"
    >

  <ImageView
      android:id="@+id/picture"
      android:layout_width="@dimen/contacts_profile_pic_width_height"
      android:layout_height="@dimen/contacts_profile_pic_width_height"
      android:layout_gravity="center"
      android:src="@drawable/ic_person"
      />

  <TextView
      android:id="@+id/name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      />

</LinearLayout>